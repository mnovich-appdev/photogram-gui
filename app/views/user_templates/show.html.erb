<div>
  <ul>
    <li>
      <a href="/users">
        Users
      </a>
    </li>
    <li>
      <a href="/photos">
        Photos
      </a>
    </li>
  </ul>
</div>

<h1>
  <%=@user.username%>
</h1>

<dl>
  <dt>
    ID
  </dt>
  <dd>
    <%=@user.id%>
  </dd>

  <dt>
    Edit user
  </dt>
  <dd>
    <form action="/update_user/<%=@user.id%>">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" placeholder="Enter a username..." value=<%=@user.username%>>

      <button> Update user </button>
    </form>
  </dd> 
</dl>

<h1> Own photos (<%=@user.own_photos.count%>) </h1>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
    </th>
  </tr>

  <%@user.own_photos.each do |display|%>
  <tr>

    <td>
      <img src="<%=display.image%>">
    </td>
    
    <td>
      <%=display.poster.username%>
    </td>
  
    <td>
      <%=display.caption%>
    </td>

    <td>
      <%=display.created_at%>
    </td>

    <td>
      <a href="/photos/<%=display.id%>">
        Show details
      </a>
    </td>
  </tr>
  <%end%>
  </table>